{
    "manifest_version": 2,

    "name": "UpgradedWaffle",
    "description": "Make GitHub better.",
    "version": "1.0",

    "background": {
        "scripts": [ "js/event.js" ],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": [ "*://github.com/*" ],
            "js": [ "js/content.js" ]
        }
    ],

    "permissions": [
        "identity",
        "https://github.com/login/oauth/authorize",
        "https://*.chromiumapp.org/*"
    ]
}